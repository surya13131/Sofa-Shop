{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "CUSTOM",
    "installCommand": "./mvnw package",
    "startCommand": "java -jar target/goodwill-0.0.1-SNAPSHOT.jar",
    "workingDirectory": "GOODWILL"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "sleepApplication": false,
    "multiRegionConfig": {
      "asia-southeast1-eqsg3a": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
